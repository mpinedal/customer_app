
@{
    ViewBag.Title = "Customers";
}

@using WebApp.Helpers;
<script src="~/Scripts/Views/Customers.js"></script>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>



@Html.CtrlTable(viewName: "Customers", id: "tblCustomers", title: "Customer List",
    columnsTitle: "Id,Name,LastName,DateOfBirth,Sex,State", ColumnsDataName: "Id,Name,LastName,DateOfBirth,Sex,State", onSelectFunction: "BindFields", colorHeader:"red")


<div class="card border-secondary" style="margin-top: 50px;">
    <div class="card-header">
        <div class="row pull-right">
            <div class="col-md-8">Customer edition</div>
            <div class="col-md-4">
                @Html.CtrlButton(viewName: "Customers", id: "btnCreate", label: "Save", onClickFunction: "Create", buttonType: "success")
                @Html.CtrlButton(viewName: "Customers", id: "btnUpdate", label: "Save changes", onClickFunction: "Update", buttonType: "info")
                @Html.CtrlButton(viewName: "Customers", id: "btnDelete", label: "Delete", onClickFunction: "Delete", buttonType: "danger")
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="bs-component">
                    <form id="frmEdition">
                        @Html.CtrlInput(id: "txtId", type: "text", label: "Id", columnDataName: "Id")
                        @Html.CtrlInput(id: "txtName", type: "text", label: "Name", columnDataName: "Name")
                        @Html.CtrlInput(id: "txtLastName", type: "text", label: "LastName", columnDataName: "LastName")
                        @Html.CtrlInput(id: "txtDateOfBirth", type: "date", label: "Date of birth", columnDataName: "DateOfBirth")
                        @Html.CtrlInput(id: "txtSex", type: "text", label: "Sex", columnDataName: "Sex")
                        @Html.CtrlInput(id: "txtState", type: "text", label: "State", columnDataName: "State")
                        @* @Html.CtrlDropDown(id: "drpGender", label: "Gender", listId: "LST_GENERO")*@
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>